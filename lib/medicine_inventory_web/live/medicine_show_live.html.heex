<Layouts.app flash={@flash}>
  <div class="min-h-screen bg-gradient-to-br from-orange-50 to-amber-50 py-8">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-orange-900 mb-2">💊 {@medicine.name}</h1>
        <p class="text-lg text-orange-700">
          Medicine Details
        </p>
      </div>
      
<!-- Navigation -->
      <div class="flex justify-center space-x-4 mb-8">
        <.link
          navigate={~p"/"}
          class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200"
        >
          🏠 Home
        </.link>
        <.link
          navigate={~p"/inventory"}
          class="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200"
        >
          📊 Back to Inventory
        </.link>
        <.link
          navigate={~p"/add"}
          class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200"
        >
          ➕ Add Medicines
        </.link>
      </div>
      
<!-- Medicine Details Card -->
      <div class="bg-white rounded-xl shadow-lg border border-orange-200 overflow-hidden">
        <div class="md:flex">
          <!-- Photo Section -->
          <div class="md:w-1/2">
            <%= if @medicine.photo_paths != [] and hd(@medicine.photo_paths) do %>
              <img
                src={"/uploads/" <> hd(@medicine.photo_paths)}
                alt={@medicine.name}
                class="h-64 md:h-full w-full object-cover"
              />
            <% else %>
              <div class="h-64 md:h-full bg-orange-100 flex items-center justify-center">
                <span class="text-8xl">💊</span>
              </div>
            <% end %>
          </div>
          
<!-- Details Section -->
          <div class="md:w-1/2 p-8">
            <div class="space-y-6">
              <!-- Basic Information -->
              <div>
                <h3 class="text-xl font-bold text-orange-900 mb-4">📋 Basic Information</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Medicine Name:</span>
                    <span class="text-orange-900">{@medicine.name}</span>
                  </div>

                  <%= if @medicine.brand_name do %>
                    <div class="flex justify-between">
                      <span class="font-medium text-orange-700">Brand:</span>
                      <span class="text-orange-900">{@medicine.brand_name}</span>
                    </div>
                  <% end %>

                  <%= if @medicine.generic_name do %>
                    <div class="flex justify-between">
                      <span class="font-medium text-orange-700">Generic:</span>
                      <span class="text-orange-900">{@medicine.generic_name}</span>
                    </div>
                  <% end %>

                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Form:</span>
                    <span class="text-orange-900">
                      {String.capitalize(@medicine.dosage_form)}
                    </span>
                  </div>

                  <%= if @medicine.active_ingredient do %>
                    <div class="flex justify-between">
                      <span class="font-medium text-orange-700">Active Ingredient:</span>
                      <span class="text-orange-900">{@medicine.active_ingredient}</span>
                    </div>
                  <% end %>
                </div>
              </div>
              
<!-- Strength & Dosage -->
              <div>
                <h3 class="text-xl font-bold text-orange-900 mb-4">💪 Strength & Dosage</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Strength:</span>
                    <span class="text-orange-900">
                      {MedicineInventory.Medicine.strength_display(@medicine)}
                    </span>
                  </div>
                </div>
              </div>
              
<!-- Container & Quantity -->
              <div>
                <h3 class="text-xl font-bold text-orange-900 mb-4">📦 Container & Quantity</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Container:</span>
                    <span class="text-orange-900">
                      {String.capitalize(String.replace(@medicine.container_type, "_", " "))}
                    </span>
                  </div>

                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Total Quantity:</span>
                    <span class="text-orange-900">
                      {@medicine.total_quantity} {@medicine.quantity_unit}
                    </span>
                  </div>

                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Remaining:</span>
                    <span class="text-orange-900">
                      {@medicine.remaining_quantity} {@medicine.quantity_unit}
                    </span>
                  </div>
                </div>
              </div>
              
<!-- Usage Progress -->
              <div>
                <h3 class="text-xl font-bold text-orange-900 mb-4">📊 Usage</h3>
                <div class="space-y-2">
                  <div class="flex justify-between text-sm text-orange-600">
                    <span>Remaining</span>
                    <span>{MedicineInventory.Medicine.usage_percentage(@medicine)}%</span>
                  </div>
                  <div class="w-full bg-orange-200 rounded-full h-4">
                    <div
                      class="bg-orange-500 h-4 rounded-full transition-all duration-300"
                      style={"width: #{MedicineInventory.Medicine.usage_percentage(@medicine)}%"}
                    >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
<!-- Additional Information Section -->
        <div class="border-t border-orange-200 p-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Dates & Tracking -->
            <div>
              <h3 class="text-xl font-bold text-orange-900 mb-4">📅 Dates & Tracking</h3>
              <div class="space-y-3">
                <%= if @medicine.expiration_date do %>
                  <div class="flex justify-between items-center">
                    <span class="font-medium text-orange-700">Expiration:</span>
                    <div class="flex items-center space-x-2">
                      <%= cond do %>
                        <% Date.diff(@medicine.expiration_date, Date.utc_today()) < 0 -> %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            ⚠️ Expired
                          </span>
                        <% Date.diff(@medicine.expiration_date, Date.utc_today()) <= 30 -> %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            ⏰ Expires Soon
                          </span>
                        <% true -> %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            ✅ Good
                          </span>
                      <% end %>
                      <span class="text-orange-900">{@medicine.expiration_date}</span>
                    </div>
                  </div>
                <% end %>

                <%= if @medicine.purchase_date do %>
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Purchased:</span>
                    <span class="text-orange-900">{@medicine.purchase_date}</span>
                  </div>
                <% end %>

                <%= if @medicine.date_opened do %>
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Opened:</span>
                    <span class="text-orange-900">{@medicine.date_opened}</span>
                  </div>
                <% end %>

                <div class="flex justify-between">
                  <span class="font-medium text-orange-700">Status:</span>
                  <span class="text-orange-900 capitalize">{@medicine.status}</span>
                </div>
              </div>
            </div>
            
<!-- Additional Details -->
            <div>
              <h3 class="text-xl font-bold text-orange-900 mb-4">📝 Additional Details</h3>
              <div class="space-y-3">
                <%= if @medicine.manufacturer do %>
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Manufacturer:</span>
                    <span class="text-orange-900">{@medicine.manufacturer}</span>
                  </div>
                <% end %>

                <%= if @medicine.lot_number do %>
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">Lot Number:</span>
                    <span class="text-orange-900">{@medicine.lot_number}</span>
                  </div>
                <% end %>

                <%= if @medicine.ndc_code do %>
                  <div class="flex justify-between">
                    <span class="font-medium text-orange-700">NDC Code:</span>
                    <span class="text-orange-900">{@medicine.ndc_code}</span>
                  </div>
                <% end %>

                <%= if @medicine.indication do %>
                  <div>
                    <span class="font-medium text-orange-700">Indication:</span>
                    <p class="text-orange-900 mt-1">{@medicine.indication}</p>
                  </div>
                <% end %>

                <%= if @medicine.notes do %>
                  <div>
                    <span class="font-medium text-orange-700">Notes:</span>
                    <p class="text-orange-900 mt-1">{@medicine.notes}</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
<!-- Action Buttons -->
        <div class="border-t border-orange-200 p-6 bg-orange-50">
          <div class="flex justify-center space-x-4">
            <button
              phx-click="delete_medicine"
              data-confirm="Are you sure you want to delete this medicine? This action cannot be undone."
              class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200"
            >
              🗑️ Delete Medicine
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layouts.app>
